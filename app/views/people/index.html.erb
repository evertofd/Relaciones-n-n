<div class="container text_center">


  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Personal</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col"> Proyectos </th>
        <th colspan="3"> Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td>

          <% person.projects.each do |pro| %>
          <%= link_to pro.name, pro %>
          <% end %>

        </td>
        <td><%= link_to 'Proyectos', person, class:"btn btn-primary" %></td>
        <td><%= link_to 'Informacion', edit_person_path(person), class:"btn btn-info" %></td>
        <td><%= link_to 'Eliminar', person, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
