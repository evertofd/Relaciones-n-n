<div class="container text_center">

<p id="notice"><%= notice %></p>

<h1 class="text-center">Proyectos</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Proyecto</th>
      <th scope="col"> Personas </th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr>

      <td><%= project.name %></td>
      <td><%= project.people.each do |peop| %>
        <%= link_to peop.name, peop %>
        <% end %>
      </td>
      <td><%= link_to 'Proyectos', project, class:"btn btn-info"%></td>
      <td><%= link_to 'Informacion', edit_project_path(project), class:"btn btn-primary" %></td>
      <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
